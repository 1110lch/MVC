@model IEnumerable<PrjFinal.Models.TableFinalExams1081703>

@{
    ViewBag.Title = "Index3";
}

<h2>員工查詢</h2>
<form method="post" action="@Url.Action("Index3")">
    <div class="row">
        <div class="col-md-2">
            <p><a href="/Home/Index3?EmpCode=1">1</a></p>
            <p><a href="/Home/Index3?EmpCode=2">2</a></p>
            <p><a href="/Home/Index3?EmpCode=3">3</a></p>
            <p><a href="/Home/Index3?EmpCode=4">4</a></p>
            <p><a href="/Home/Index3?EmpCode=5">5</a></p>
            <p><a href="/Home/Index3?EmpCode=6">6</a></p>
            <p><a href="/Home/Index3?EmpCode=7">7</a></p>
            <p><a href="/Home/Index3?EmpCode=8">8</a></p>
            <p><a href="/Home/Index3?EmpCode=9">9</a></p>
            <p><a href="/Home/Index3?EmpCode=13">13</a></p>
        </div>
        <div class="col-md-10">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.員工編號)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.訂單號碼)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.收貨人)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.送貨地址)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.員工編號)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.訂單號碼)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.收貨人)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.送貨地址)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit")?OrderCodeEdit=@item.訂單號碼" class="btn btn-warning">編輯</a>
                            <a href="@Url.Action("Delete")?OrderCode=@item.訂單號碼" 
                               class="btn btn-danger" 
                               onclick="return confirm('確定要刪除編號 @item.訂單號碼 的訂單編號嗎?');">刪除</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</form>